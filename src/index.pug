      .last-section
        section.parallax.parallax-cloud
          - var paralaxCloudSpeed = [0, -0.5, -0.5, -0.38, -0.3, -0.3]
              each item, index in paralaxCloudSpeed
                .parallax-cloud__layer(data-speed=`${item}`)
