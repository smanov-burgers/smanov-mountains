.previews {
    display: flex;
    flex-direction: column;
    width: 100%;
    @include tablets {
        display: none;
    }
}

.previews__item {
    display: inline-block;
    color: #fff;
    &--selected {
        border: 2px solid #dc9322;
        transition: all 1s ease;
    }
}

