.works {
    display: flex;
    align-items: flex-start;
    max-height: 746px;
}

.works__title {
    margin-top: 10px;
    margin-bottom: 90px;
    color: #464d62;
    @include osans();
    font-size: 30px;
    font-weight: 700;
    line-height: 48px;

    @include desktop {
        padding-top: 66px;
        padding-left: 32px;
        letter-spacing: 2px;
        margin-bottom: 60px;
    }
}

.works__left {
    display: flex;
    flex: 2;
}

.works__right {
    display: flex;
    flex: 1;
    flex-direction: column;
    justify-content: flex-start;
    margin-left: 156px;

    @include desktop {
        margin-right: 68px;
        margin-left: 78px;
        align-items: center;
        padding-top: 10px;
    }
}

.works__text {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding-top: 40px;
    @include desktop {
        padding-top: 30px;
    }
}

.works__desc-text {
    color: rgba(#464d62, 0.7);
    @include osans();
    font-size: 16px;
    font-weight: 700;
    line-height: 30px;
    padding-top: 28px;
    padding-bottom: 36px;
    @include desktop {
        padding-top: 0;
        padding-left: 34px;
        line-height: 32px;
    }
}

.works__sub-title {
    margin-top: 10px;
    margin-bottom: 90px;
    color: #464d62;
    @include osans();
    font-size: 30px;
    font-weight: 700;
    line-height: 48px;

    @include desktop {
        margin-top: 0;
        padding-top: 16px;
        padding-left: 32px;
        letter-spacing: 2px;
        margin-bottom: 36px;
    }
}