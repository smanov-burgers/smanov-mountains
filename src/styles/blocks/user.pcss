.user {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  @include tablets {
    max-width: 280px;
  }
  @include phones {
    max-width: initial;
  }
}

.user__avatar {
  margin-bottom: 20px;
  align-self: center;
  @include desktop {
    margin-left: 26px;
  }
  @include tablets {
    margin-left: 0;
    margin-right: 26px;
    margin-bottom: 0;
  }
  @include phones {
    margin-right: 0;
  }
}

.user__desc {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  padding-top: 32px;
  @include desktop {
    padding-top: 46px;
  }
  @include tablets {
    padding-top: 30px;
  }
}

.user__desc-item {
  display: flex;
  width: 100%;
  padding-top: 20px;
  @include tablets {
    padding-top: 16px;
  }
}

.user__col {
  width: 50%;
  @include osans();
  color: #464d62;
  font-size: 16px;
  font-weight: 700;
  @include desktop {
    padding-left: 24px;
  }
  
}

.user__key {
  color: rgba(#464d62, 0.3);
  padding-left: 38px;
  @include desktop {
    padding-left: 29px;
  }
}