script(type="text/x-template")#skills-list
    ul.skill-category
      //- pre {{skills}}
      li.skill-category__item.skills-row(v-for="category in skills" :key="category.title")
        skills-row(
          :category="category"
        )

script(type="text/x-template")#skills-row
  .skills-wrapper
    .skills-row__title {{category.title}}
    ul.skills-row__list
      li.skills-row__item(v-for="skill in category.skills" :key="skill.id")
        skill(
          :skill="skill"
        )

script(type="text/x-template")#skill
  .skill
    .skill__wrapper
        svg(viewBox="0 0 200 200" preserveAspectRatio="none").skill__shape
            circle(r="80" cx="100" cy="100").skill__circle.skill__circle--under
            circle(r="80" cx="100" cy="100" ref="circle" stroke="url(#gradient)" transform='rotate(180 100 100)').skill__circle.skill__circle--above
            linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
                stop(offset="0%" stop-color="#5500f2")
                stop(offset="100%" stop-color="#8f00ef")
        .skill__title {{skill.title}}